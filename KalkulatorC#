Console.WriteLine("Kalkulator dla dwoch liczb");
Console.WriteLine("1.Dodawanie");
Console.WriteLine("2.Odejmowanie");
Console.WriteLine("3.Mnożenie");
Console.WriteLine("4.Dzielenie");
Console.WriteLine("5.Wyliczanie wartości procentowej");
Console.WriteLine("6.Podnoszenie do potegi");
Console.WriteLine("7.Pierwiastkowanie");
Console.Write("Wybierz opcje (Wybierz od 1 do 7): ");
int liczba = Convert.ToInt32(Console.ReadLine());
switch (liczba)
{
    case 1:
        {
            Console.WriteLine("Podaj dwie liczby");
            int liczba2 = Convert.ToInt32(Console.ReadLine());
            int liczba3 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Wynik Dodawania To: " + (liczba2+liczba3));
        }
        break;

    case 2:
        {
            Console.WriteLine("Podaj dwie liczby");
            int liczba2 = Convert.ToInt32(Console.ReadLine());
            int liczba3 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Wynik Odejmowania To: " + (liczba2-liczba3));
        }
        break;
    case 3:
        {
            Console.WriteLine("Podaj dwie liczby");
            int liczba2 = Convert.ToInt32(Console.ReadLine());
            int liczba3 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Wynik Mnożenia To: " + (liczba2 * liczba3));
        }
        break;
    case 4:
        {
            Console.WriteLine("Podaj dwie liczby");
            int liczba2 = Convert.ToInt32(Console.ReadLine());
            int liczba3 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Wynik Dzielenia To: " + (liczba2/liczba3));
        }
        break;
    case 5:
        {
            Console.WriteLine("Podaj dwie liczby");
            int liczba2 = Convert.ToInt32(Console.ReadLine());
            int liczba3 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Wynik Z Wyliczania Wartości Procentowej To: " + ((liczba3*100)/liczba2) +" %");
        }
        break;
    case 6:
        {
            Console.WriteLine("Podaj jedna liczbe");
            int liczba2 = Convert.ToInt32(Console.ReadLine());
            int liczba3 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Wynik Z Potegowania To: "+(Math.Pow(liczba2,2)));
        }
        break;
    case 7:
        {
            Console.WriteLine("Podaj jedna liczbe");
            int liczba2 = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Wynik Z Pierwiastkowania to: "+(Math.Sqrt(liczba2)));
        }
        break;
}
